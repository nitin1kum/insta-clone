<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
    <div class="flex justify-between items-center px-4 fixed top-0 py-4 bg-zinc-900 z-50 w-full">
      <a class="text-sm text-blue-500" href="/profile"><i class="ri-arrow-left-s-line"></i> profile</a>
      <h2 class="leading-none text-sm">Edit Profile</h2>
      <a class="text-sm" href="/feed"><i class="ri-home-line"></i> home</a>
    </div>
    <div class="flex flex-col items-center gap-2 mt-20">

      <div class="image w-20 h-20 bg-sky-100 rounded-full overflow-hidden" >
        <img class="h-full w-full  object-cover" src="/images/uploads/<%=user.profileImage%>" id="dp-change" alt="">
      </div>
      <button id="edit-dp" class="text-blue-500 capitalize">edit picture</button>
    </div>
    <div class="gap-5 px-4 mt-10">
      <h3 class="text-lg leading-none">Edit Account Details</h3>
      <hr class="opacity-30 my-3">
      <form class="w-full" action="/update" method="post" enctype="multipart/form-data">
        <input class="hidden" type="file" name="dp" id="dp" onchange="changedDP(this)">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" value="<%=user.username%>" type="text" placeholder="username" name="username">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900" value="<%=user.name%>" type="text" placeholder="name" name="name">
        <textarea class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900 resize-none" id="user-bio"  name="bio" placeholder="Bio"><%=user.bio%></textarea>
        <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2" type="submit" value="Update Details">
      </form>
    </div>
  </div>
  <script>
    document.getElementById('edit-dp').addEventListener('click', ()=>{
      document.getElementById('dp').click();
    })
    function changedDP(input){
      document.getElementById("dp-change").src = URL.createObjectURL(input.files[0]);
    }
  </script>
<% include ./partials/footer.ejs %>